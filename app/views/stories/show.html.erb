<div class="section_1_stories" style="margin-top:90px; padding-top: 10px;">
  <div class="container slideshow_stories" style="margin-top: -200px;">
    <div class="slideshow-container reveal">
      <% if @storie.photos.attached? %>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <% @storie.photos[1..-1].each_with_index do |photo, index | %>
                <div class="<%= index == 0 ? 'carousel-item active' : 'carousel-item' %>">
                  <%= cl_image_tag photo.key, :class => "slika_section_show", alt: "Storie Photo", title: "Storie Photo"   %>
                </div>
              <% end %>
            </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="section_2" style="padding-bottom: 10px;">
  <div class="container  reveal">
    <h2 class="home_heading_black" style="padding-top: 80px;"><%= @storie.fourth_header %></h2>
    <p class="section_tri_para" style="padding-top: 40px; padding-bottom: 20px;"><%= @storie.fourth_description %></p>


    <% if @storie.link.present? %>
    <div class="frame_video">
      <div class="container">
        <iframe class="frameee video" width="100%" height="650px" frameborder="0" allowfullscreen src='https://www.youtube.com/embed/<%= @storie.link %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' ></iframe>
      </div>
    </div>
    <% end %>


  </div>
</div>

<div class="container" style="padding-top: 100px; padding-bottom: 100px;">
  <% if policy(@storie).destroy? %>
    <%= link_to "Delete", story_path(@storie), :class => "button_1", method: :delete, data: { confirm: "Are you sure you want to delete this story?"} %>
  <% end %>
</div>


<%= render 'shared/footer-contact' %>


<script>
var slideIndex = 1;
showSlides(slideIndex);

function plusSlides(n) {
  showSlides(slideIndex += n);
}

function currentSlide(n) {
  showSlides(slideIndex = n);
}

function showSlides(n) {
  var i;
  var slides = document.getElementsByClassName("mySlides");
  var dots = document.getElementsByClassName("dot");
  if (n > slides.length) {slideIndex = 1}
  if (n < 1) {slideIndex = slides.length}
  for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
  }
  for (i = 0; i < dots.length; i++) {
      dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex-1].style.display = "block";
  dots[slideIndex-1].className += " active";
}
</script>



